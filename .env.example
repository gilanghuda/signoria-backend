# Application network
SERVER_HOST=localhost
SERVER_PORT=8000

# CORS: comma-separated list, use * for all
ALLOWED_ORIGINS=*

# HTTPS (set USE_HTTPS=true and provide SSL_CERTFILE / SSL_KEYFILE to enable)
USE_HTTPS=false
SSL_CERTFILE=
SSL_KEYFILE=

# App secrets
SECRET_KEY=change-me-in-production

# JWT Configuration
JWT_SECRET_KEY=change-me-with-strong-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database: PostgreSQL (Local Development)
DB_LOCAL_HOST=localhost
DB_LOCAL_PORT=5432
DB_LOCAL_USER=postgres
DB_LOCAL_PASSWORD=your_strong_password
DB_LOCAL_NAME=signoria

# Database: PostgreSQL (Docker)
DB_DOCKER_HOST=db
DB_DOCKER_PORT=5432
DB_DOCKER_USER=postgres
DB_DOCKER_PASSWORD=your_strong_password
DB_DOCKER_NAME=signoria

# Active Database URL (set based on environment)
# For local development: postgresql://postgres:password@localhost:5432/signoria
# For docker: postgresql://postgres:password@db:5432/signoria
DATABASE_URL=postgresql://postgres:your_strong_password@localhost:5432/signoria
